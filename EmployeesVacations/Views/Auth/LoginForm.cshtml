@model AuthLoginViewModel

<form role="form" class="form-horizontal" asp-action="Login" id="loginForm">
	<div class="form-group">
		<label asp-for="Username" class="col-sm-2 control-label"></label>
		<div class="col-sm-10">
			<input asp-for="Username" class="form-control" autocomplete="off" autofocus placeholder="@Html.DisplayNameFor(model => model.Username)">
		</div>
	</div>
	<div class="form-group">
		<label asp-for="Password" class="col-sm-2 control-label"></label>
		<div class="col-sm-10">
			<input asp-for="Password" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Password)">
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button type="submit" class="btn btn-primary">Sign in</button>
		</div>
	</div>
</form>
<script>
	(function () {
		var $loginForm = $('#loginForm');
		$.validator.unobtrusive.parse($loginForm);
		$loginForm.ajaxForm({
			loadingText: "Signing in...",
			success: function () {
				$.ajax('/?_storeXsrfToken=1', {
					success: function (rsp) {
						$('#loginForm').hide(WMS.User.CheckLogin);
					 }
				});
			}
		});
	})();
</script>
